{
  "manifest_version": 3,
  "name": "Netflix Comment Section",
  "version": "1.0",
  "description": "Add a comment section for Netflix movies.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.netflix.com/*"],
      "js": ["popup.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {

    }
  },
  "icons": {

  }
}
